<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".searchingActivities.LinearSearchMainActivity">

    <TextView
        android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/enter_the_size_of_the_array"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/editTextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="@string/enter_size_here"
        android:autofillHints="" />

    <TextView
        android:id="@+id/txtArray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_the_array_elemets"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"/>

    <EditText
    android:id="@+id/editTextArray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:layout_marginTop="15dp"
    android:gravity="center"
    android:hint="@string/enter_size_here"
    android:autofillHints="" />
</LinearLayout>